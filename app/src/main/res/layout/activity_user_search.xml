<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inftel.isn.activity.AddUsersGroupActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearUserSearch"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Buscar"
            android:id="@+id/button2"
            android:src="@drawable/search" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:hint="Escribe el nombre del contacto"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:padding="4dp"
        android:scrollbars="none"
        android:divider="@android:color/transparent"
        android:dividerHeight="5.0sp"
        android:layout_gravity="left|center_vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:drawSelectorOnTop="true"
        android:layout_below="@+id/linearUserSearch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/android:list"
        android:layout_centerHorizontal="true"
        android:onClick="intentUsersGroup"/>

</RelativeLayout>
