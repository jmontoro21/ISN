<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/mainLayaut"
        android:layout_marginRight="5dp">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/userImg"
                android:scaleType="centerCrop"
                android:contentDescription="Image user"
                android:layout_marginRight="5dp"
                android:layout_row="2"
                android:layout_column="1" />

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/date1"
            android:layout_toRightOf="@+id/userImg"
            android:layout_marginRight="5dp"
                android:layout_row="2"
                android:layout_column="2">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
        </LinearLayout>

            <ImageButton


                android:layout_width="30dp"
                android:layout_height="25dp"
                android:contentDescription="Delete user"
                android:layout_marginRight="5dp"
                android:background="@drawable/share"
                android:layout_alignParentEnd="true"
                android:onClick="shareItems"
                style="?android:attr/buttonStyleSmall"

                android:layout_row="2"
                android:layout_column="13"
                android:text="Compartir"
                android:id="@+id/btnShare" />


            <ImageButton

                android:layout_width="30dp"
                android:layout_height="25dp"
                android:contentDescription="Delete user"
                android:layout_marginRight="5dp"
                android:background="@drawable/button"
                android:layout_alignParentEnd="true"
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/btnDeleteComments"
                android:layout_row="2"
                android:layout_column="13"
                android:onClick="deleteItems" />

        </GridLayout>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"

        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/description"
            android:layout_marginLeft="10dp"
            android:textSize="24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/imgComment"
            android:contentDescription="@string/img131"
            android:layout_gravity="center" />

            <WebView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/videoComment" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>