<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inftel.isn.activity.AddUsersGroupActivity">

    <Button
        android:id="@+id/buttonAddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/adduser"
        android:text="Editar participantes del grupo"
        android:onClick="intentList"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal|top" />

    <ListView
        android:id="@+id/list_users"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:scrollbars="none"
        android:divider="@android:color/transparent"
        android:dividerHeight="5.0sp"
        android:drawSelectorOnTop="true"
        android:layout_marginTop="70dp" />

    <ImageButton
        android:id="@+id/fab_image_button"
        android:layout_width="@dimen/fab_button_diameter"
        android:layout_height="@dimen/fab_button_diameter"
        android:layout_marginBottom="@dimen/fab_button_margin_bottom"
        android:layout_marginRight="@dimen/fab_button_margin_right"
        android:background="@drawable/fab_shape"
        android:src="@drawable/flecha"
        android:tint="@android:color/white"
        android:onClick="intentCreated"
        android:scaleType="centerInside"
        android:layout_gravity="right|bottom"/>

</FrameLayout>
